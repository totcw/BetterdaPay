<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.betterda.betterdapay.view.NormalTopBar
        android:id="@+id/topbar_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.betterda.betterdapay.view.NormalTopBar>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/sharebg"
                    />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_fragmeng_share_qrmember"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"/>


                        <TextView
                            android:id="@+id/tv_fragmeng_share_qrmember"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="邀请码"
                            android:textColor="@color/shouye_lv_tv"
                            android:textSize="14sp"
                            />

                        <Button
                            android:id="@+id/btn_fragment_sharemember"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_corner_origne2"
                            android:text="分享会员"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear_fragment_share"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_fragmeng_share_qr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"/>


                        <TextView
                            android:id="@+id/tv_fragmeng_share_qr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="邀请码"
                            android:textColor="@color/shouye_lv_tv"
                            android:textSize="14sp"
                            />

                        <Button
                            android:id="@+id/btn_fragment_share"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_corner_origne2"
                            android:text="分享代理商"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <com.betterda.mylibrary.LoadingPager
            android:id="@+id/loadpager_fragmeng_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.betterda.mylibrary.LoadingPager>
    </FrameLayout>
</LinearLayout>


