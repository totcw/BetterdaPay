<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <com.betterda.betterdapay.view.NormalTopBar
        android:id="@+id/topbar_baseliving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.betterda.betterdapay.view.NormalTopBar>


    <RelativeLayout
        android:id="@+id/relative_baseliving"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
       >


        <ImageView
            android:layout_marginLeft="26dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_baseliving_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@mipmap/pay_icon" />


        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_baseliving_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_baseliving_icon"
            android:text="福建省"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="21sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/jiantou" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lv_divider"></View>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_baseliving"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


    </android.support.v7.widget.RecyclerView>


</LinearLayout>
