<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#16d9cf" >

    <ImageView
        android:id="@+id/bar_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        android:clickable="true"
        android:src="@mipmap/common_back"
        android:background="@drawable/imagebtn_selector" />

    <TextView
        android:id="@+id/bar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:gravity="center"
        android:text="Title"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:layout_marginRight="10dp"
        android:id="@+id/bar_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="action"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp"
        android:textStyle="normal"
        android:visibility="gone" />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/bar_relative_share"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true">

        <ImageView

            android:layout_centerVertical="true"
            android:id="@+id/bar_iv_share"
            android:layout_width="28dp"
            android:layout_height="6dp"
            android:background="@mipmap/share"
            />

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/bar_relative_bus"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true">


        <ImageView

            android:layout_centerVertical="true"
            android:id="@+id/bar_iv_bus"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@mipmap/setting"
             />

        <TextView
            android:visibility="gone"
            android:layout_marginLeft="-10dp"
            android:layout_marginBottom="-10dp"
            android:layout_above="@id/bar_iv_bus"
            android:layout_toRightOf="@id/bar_iv_bus"
            android:id="@+id/tv_bar_bus"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_height="wrap_content"

            android:text="99"
            android:textColor="@color/shouye_fenlei_red"
            />
    </RelativeLayout>

</RelativeLayout>