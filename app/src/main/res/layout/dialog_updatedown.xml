<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在下载"
        android:textColor="@color/shouye_renmen_tv"
        android:textSize="16sp"
        />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_updatedown_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="16sp"
            />
        <ProgressBar
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_updatedown_progress"
            android:id="@+id/pb_updatedown"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:progressDrawable="@drawable/shape_progressbar_mini"
            android:max="100"
            android:layout_marginRight="5dp"
            />



    </RelativeLayout>


    <Button
        android:id="@+id/btn_updatedown"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:background="@color/bg_blue"
        android:text="取消下载"
        android:textColor="@color/white"
        />

</LinearLayout>
