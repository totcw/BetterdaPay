<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    android:layout_height="match_parent">

    <com.betterda.betterdapay.view.NormalTopBar
        android:id="@+id/topbar_jiesuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.betterda.betterdapay.view.NormalTopBar>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lv_divider">

    </View>
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算金额"
            android:textSize="12sp"
            android:textColor="@color/shouye_lv_tv"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            >
            <android.support.design.widget.TextInputEditText

                android:id="@+id/et_jiesuan_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入结算金额"
                android:inputType="phone"
                android:textSize="@dimen/textsize_small"

                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lv_divider">

    </View>
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_jiesuan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可结算余额:0.00元"
            android:textSize="12sp"
            android:textColor="@color/shouye_lv_tv"
            />

   <TextView
       android:id="@+id/tv_jiesuan_all"
       android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部结算"
            android:textSize="12sp"
            android:textColor="@color/bg_green"
            />




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lv_divider">

    </View>



    <Button

        android:id="@+id/btn_jiesuan_comfirm"
        android:layout_marginTop="30dp"
        android:text="确认结算"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_login_selector"
        android:layout_width="match_parent"
        android:layout_height="48dp" />


</LinearLayout>
