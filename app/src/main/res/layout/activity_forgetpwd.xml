<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/bg_gray"
              android:orientation="vertical">

    <com.betterda.betterdapay.view.NormalTopBar
        android:id="@+id/topbar_forgetpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.betterda.betterdapay.view.NormalTopBar>


    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner_white_gray"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_register_number"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:background="@mipmap/phone"
            />


        <android.support.design.widget.TextInputLayout
            app:hintEnabled="false"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_register_number"
            android:layout_centerVertical="true"

            >
        <android.support.design.widget.TextInputEditText
            android:inputType="number"
            android:textSize="@dimen/textsize_little"
            android:id="@+id/et_forgetpwd_number"

            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入手机号"


            />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner_white_gray"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:background="@mipmap/yzm"
            />
        <android.support.design.widget.TextInputLayout
            app:hintEnabled="false"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="10"
            >
        <android.support.design.widget.TextInputEditText

            android:textSize="@dimen/textsize_little"

            android:id="@+id/et_forgetpwd_yzm"
            android:inputType="number"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入验证码"



            />
        </android.support.design.widget.TextInputLayout>
        <com.betterda.mylibrary.view.CountDown
            android:id="@+id/countdown_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </com.betterda.mylibrary.view.CountDown>

    </LinearLayout>

    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner_white_gray"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_register_password"
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:background="@mipmap/password"
            />
        <android.support.design.widget.TextInputLayout
            app:hintEnabled="false"
            android:layout_toRightOf="@id/iv_register_password"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            >


        <android.support.design.widget.TextInputEditText
            android:inputType="textPassword"
            android:textSize="@dimen/textsize_little"
            android:id="@+id/et_forgetpwd_pwd"
            android:paddingRight="10dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入6-20位密码"


            />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner_white_gray"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_register_password2"
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:background="@mipmap/password"
            />

        <android.support.design.widget.TextInputLayout
            app:hintEnabled="false"
            android:layout_toRightOf="@id/iv_register_password2"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            >


        <android.support.design.widget.TextInputEditText
            android:inputType="textPassword"
            android:textSize="@dimen/textsize_little"
            android:id="@+id/et_forgetpwd_pwd2"
            android:paddingRight="10dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请再次输入密码"


            />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>






    <Button

        android:id="@+id/btn_forgetpwd"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/btn_login_selector"
        android:layout_width="match_parent"
        android:text="确认"
        android:textColor="#ffffff"
        android:layout_height="48dp" />


</LinearLayout>
