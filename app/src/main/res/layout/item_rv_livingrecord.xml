<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_livingrecord"
                android:background="@mipmap/small_shui"
                android:layout_width="11dp"
                android:layout_height="18dp"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:id="@+id/tv_item_livingrecord_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shouye_renmen_tv"
                android:text="姓名"
                android:textSize="14sp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:id="@+id/tv_item_livingrecord_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shouye_renmen_tv"
                android:text="帐号"
                android:textSize="14sp" />
        </LinearLayout>


        <TextView
            android:text="来源"
            android:id="@+id/tv_item_livingrecord_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="来源"
                android:id="@+id/tv_item_livingrecord_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shouye_renmen_tv"
                android:textSize="13sp" />

            <TextView
                android:text="来源"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_item_livingrecord_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shouye_lv_tv"
                android:textSize="13sp" />

        </LinearLayout>


        <TextView
            android:text="来源"
            android:id="@+id/tv_item_livingrecord_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_blue"
            android:textSize="14sp" />

    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="@color/lv_divider"></View>
</LinearLayout>
