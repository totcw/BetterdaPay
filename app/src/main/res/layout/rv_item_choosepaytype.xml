<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/relative_choose_zhifubao"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:background="#ffffff"
              android:orientation="vertical"
              android:padding="10dp">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_my_information"
            android:layout_width="30dp"
            android:layout_height="30dp"

            />

        <TextView
            android:id="@+id/tv_item_choosepaytype_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="dfd"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="13sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_item_choosepaytype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="d"
            android:textColor="@color/shouye_lv_tv"
            android:textSize="12sp"/>


        <ImageView
            android:id="@+id/iv_my_jiantou5"
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:background="@mipmap/jiantou"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_item_choosepaytype_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="dfd"
        android:textColor="@color/bg"
        android:textSize="13sp"/>


</LinearLayout>



