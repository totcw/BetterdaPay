<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relative_choose_zhifubao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_my_information"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/zfb_qr"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_my_information"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_choosepaytype_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/shouye_renmen_tv"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_item_choosepaytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:textColor="@color/shouye_lv_tv"
            android:textSize="12sp"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_my_jiantou5"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:background="@mipmap/jiantou"/>


</LinearLayout>



