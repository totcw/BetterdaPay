<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f1f1f1"
              android:orientation="vertical">
    <com.betterda.betterdapay.view.NormalTopBar
        android:id="@+id/topbar_chose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.betterda.betterdapay.view.NormalTopBar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lv_divider"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易类型:"
                    android:textColor="@color/shouye_renmen_tv"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_item_balance_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收款"
                    android:textColor="@color/shouye_renmen_tv"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易金额:"
                    android:textColor="@color/shouye_renmen_tv"
                    android:textSize="14sp"/>

                <TextView

                    android:id="@+id/tv_item_balance_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textColor="@color/bg"
                    android:textSize="14sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lv_divider">

            </View>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                >

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择支付通道"
                    android:textColor="@color/shouye_renmen_tv"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lv_divider">

            </View>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_choosepaytype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <com.betterda.mylibrary.LoadingPager
            android:id="@+id/loadpager_choosepaytype"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.betterda.mylibrary.LoadingPager>


    </FrameLayout>



</LinearLayout>
