<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <!-- 底部布局 -->
    <LinearLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lv_divider"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">

            <com.betterda.mylibrary.view.IndicatorView
                android:id="@+id/idv_shoukuan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></com.betterda.mylibrary.view.IndicatorView>

            <com.betterda.mylibrary.view.IndicatorView

                android:id="@+id/idv_wallet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></com.betterda.mylibrary.view.IndicatorView>

            <com.betterda.mylibrary.view.IndicatorView
                android:id="@+id/idv_up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></com.betterda.mylibrary.view.IndicatorView>

            <com.betterda.mylibrary.view.IndicatorView
                android:id="@+id/idv_banlance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></com.betterda.mylibrary.view.IndicatorView>

            <com.betterda.mylibrary.view.IndicatorView
                android:id="@+id/idv_my"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></com.betterda.mylibrary.view.IndicatorView>


        </LinearLayout>

    </LinearLayout>

    <FrameLayout

        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linear_main">

    </FrameLayout>


</RelativeLayout>