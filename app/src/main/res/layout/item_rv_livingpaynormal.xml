<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:paddingTop="10dp"
              android:background="@color/bg_gray"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_item_livingpaynormal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_corner_white"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">


        <ImageView
            android:id="@+id/iv_item_livingpaynormal"
            android:layout_width="11dp"
            android:layout_height="18dp"

            />

        <TextView
            android:id="@+id/tv_item_livingpaynormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="水费"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="添加帐号"
            android:textColor="@color/shouye_lv_tv"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"

            android:background="@mipmap/jiantou"/>

    </LinearLayout>
</LinearLayout>